		-------------------------------------------------------------------------------------------

endef

export HEADER_Ph
all : $(NAME)
%.o:%.c
	@$(CC) $(CFlAGS) -c $<
$(NAME) : $(OBJ)
	@echo $(Red)" $${HEADER_Ph}"$(Color_Off)
	@echo  $(BPurple)"					made by : heybellakrim"$(Color_Off)
	@$(CC) $(CFlAGS) $(TH) $(OBJ) -o $(NAME)
	@make clean -C .
clean : 
	@rm -f $(OBJ)
fclean : clean
	@rm -f $(NAME)
re : fclean all
.PHONY : clean fclean bonus re
